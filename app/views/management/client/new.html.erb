<ul class="breadcrumb">
  <li>
    <%= link_to "Management", management_index_path %>
    <span class="divider">/</span>
  </li>
  <li>
    <%= link_to "Client list", management_client_index_path %>
    <span class="divider">/</span>
  </li>
  <li class="active">Add new client</li>
</ul>

<h3 class="page-header">Add new client</h3>

<% if flash[:error] %>
  <p class="alert alert-error" >
    <button type=button" class="close" data-dismiss="alert">x</button>
    <strong><%= h flash[:error] %></strong>
  </p>
<% end %>

<%= form_for @client, :url => management_client_index_path, :method => :post, :html => {:class => "form-horizontal"} do |f| %>
  <%= render :partial => 'client_form', :locals => {:f => f} %>
<% end %>
